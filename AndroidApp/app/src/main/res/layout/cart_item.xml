<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_margin="12dp"
            android:src="@drawable/cola"
            android:layout_height="70dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="CocaCola"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/tvTitle"
                android:textSize="16dp"
                android:textColor="#444"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text="2 x 30 000 \n= 60 000 сумм"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/tvQuanityPrice"
                android:layout_marginTop="4dp"
                android:textSize="15dp"
                android:textColor="#444"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_secondary"
                        android:id="@+id/btnMinus"
                        android:src="@drawable/ic_icons8_minus"
                        android:layout_height="28dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:textColor="#444"
                        android:textStyle="bold"
                        android:id="@+id/tvQuantity"
                        android:textSize="16dp"
                        android:text="15"
                        android:layout_height="wrap_content"/>
                    <ImageButton
                        android:layout_width="36dp"
                        android:layout_weight="1"
                        android:id="@+id/btnPlus"
                        android:background="@drawable/btn_secondary"
                        android:src="@drawable/ic_icons8_plus"
                        android:layout_height="28dp"/>
                </LinearLayout>

                <ImageButton
                    android:layout_width="36dp"
                    android:layout_weight="1"
                    android:id="@+id/btnRemove"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/btn_primary"
                    android:src="@drawable/ic_icons8_trash_can_1"
                    android:layout_height="28dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#999"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:alpha=".8"
        android:layout_height="1dp"/>
</LinearLayout>