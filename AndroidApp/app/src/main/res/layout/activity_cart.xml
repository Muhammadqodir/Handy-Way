<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartList"
        android:layout_width="match_parent"
        android:numColumns="1"
        android:listSelector="#00000000"
        android:paddingBottom="120dp"
        android:clipToPadding="false"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="0sp"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tvEmpty"
        android:visibility="gone"
        android:gravity="center"
        android:drawableTop="@drawable/empty"
        android:textSize="18dp"
        android:drawablePadding="12dp"
        android:text="@string/empty"
        android:textColor="#444"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:id="@+id/llLoading"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#444"
            android:textSize="18dp"
            android:text="@string/loading"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/llBottomBar"
        android:visibility="gone"
        android:background="@color/coloWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@id/send_order"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/tvTotalPrice"
            android:textSize="18dp"
            android:text="@string/total"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/btn_primary"
            android:padding="8dp"
            android:gravity="center"
            android:visibility="visible"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:id="@+id/send_order"
            android:layout_margin="12dp"
            android:clickable="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/arrange_order"
                android:textColor="@color/coloWhite"
                android:id="@+id/tvBtnTitle"
                android:textSize="18dp"
                android:drawableLeft="@drawable/ic_icons8_buy"
                android:gravity="center"
                android:drawablePadding="12dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:layout_width="32dp"
                android:id="@+id/progress"
                android:visibility="gone"
                android:indeterminateTint="@color/coloWhite"
                android:layout_height="32dp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorSuccess"
        android:gravity="center"
        android:id="@+id/llSuccess"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:src="@drawable/ic_icons8_ok_1"
            android:layout_height="100dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="@color/coloWhite"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="@string/sended"
            android:layout_marginRight="24dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:text="@string/to_main"
            android:background="@drawable/btn_higth_contrast_success"
            android:textColor="@color/colorSuccess"
            android:textStyle="bold"
            android:paddingLeft="12dp"
            android:id="@+id/btnBackToMain"
            android:paddingRight="12dp"
            android:layout_margin="12dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>