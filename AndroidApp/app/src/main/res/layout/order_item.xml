<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:paddingTop="12dp"
        android:id="@+id/item_parent"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="90dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/cola"
            android:id="@+id/ivPreview"
            android:layout_height="90dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Заказ №156"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/tvTitle"
                android:textSize="16dp"
                android:textColor="#444"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="@string/order_status"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:textSize="12dp"
                android:textColor="#444"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Отправлено"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/tvStatus"
                android:textSize="15dp"
                android:textColor="#444"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text="15.02.2021 24:15"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="right"
                android:id="@+id/tvDate"
                android:layout_marginTop="4dp"
                android:textSize="15dp"
                android:textColor="#444"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_icons8_edit"
        android:padding="8dp"
        android:id="@+id/btnEdit"
        android:background="@drawable/btn_hight_contrast"
        android:layout_margin="12dp"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:background="#999"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/item_parent"
        android:layout_marginRight="12dp"
        android:alpha=".8"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>