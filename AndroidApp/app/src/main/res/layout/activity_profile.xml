<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:id="@+id/llLoading"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#444"
            android:textSize="18dp"
            android:text="@string/loading"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="75dp"
            android:layout_height="110dp">
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/ivPic"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="OOO MQ"
                android:textSize="18dp"
                android:id="@+id/tvOrgName"
                android:textStyle="bold"
                android:textColor="#444"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="+998998987570"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="#444"
                android:id="@+id/tvPhoneNum"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_icons8_phone"
                android:textSize="18dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="Muhammadqodir Abduvoitov"
                android:layout_marginTop="4dp"
                android:drawablePadding="8dp"
                android:id="@+id/tvOwnerName"
                android:textColor="#444"
                android:drawableLeft="@drawable/ic_icons8_male_user"
                android:textSize="18dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/inn"
            android:textColor="#777"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="15648945468484564"
            android:textColor="#444"
            android:id="@+id/tvINN"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#999"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/adres"
            android:textColor="#777"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Fargona shaxar, "
            android:textColor="#444"
            android:textSize="18dp"
            android:id="@+id/tvAddress"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#999"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/landmark"
            android:textColor="#777"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Цум ичи"
            android:textColor="#444"
            android:id="@+id/tvLandmark"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#999"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/wholesaler"
            android:textColor="#777"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Нет"
            android:textColor="#444"
            android:id="@+id/isWholesaler"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>