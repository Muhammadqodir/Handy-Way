<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="24dp"
        android:id="@+id/cardParent"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitCenter"
                    android:id="@+id/ivPic"
                    android:adjustViewBounds="true"
                    android:layout_height="150dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="CocaCola"
                    android:lines="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/tvTitle"
                    android:textSize="16dp"
                    android:textColor="#444"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="200 000 сумм"
                    android:textSize="16dp"
                    android:id="@+id/tvPrice"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:textColor="#444"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="6"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_secondary"
                        android:id="@+id/btnMinus"
                        android:src="@drawable/ic_icons8_minus"
                        android:layout_height="28dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:textColor="#444"
                        android:textStyle="bold"
                        android:id="@+id/tvQuantity"
                        android:textSize="16dp"
                        android:text="15"
                        android:layout_height="28dp"/>
                    <ImageButton
                        android:layout_width="36dp"
                        android:layout_weight="1"
                        android:id="@+id/btnPlus"
                        android:background="@drawable/btn_secondary"
                        android:src="@drawable/ic_icons8_plus"
                        android:layout_height="28dp"/>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:background="@drawable/btn_primary"
                    android:textColor="@color/coloWhite"
                    android:text="@string/buy"
                    android:paddingLeft="24dp"
                    android:id="@+id/btnBuy"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="15dp"
                    android:layout_marginBottom="12dp"
                    android:paddingRight="24dp"
                    android:drawableLeft="@drawable/ic_icons8_add_shopping_cart_1"
                    android:layout_marginTop="8dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>